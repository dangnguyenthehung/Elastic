<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elastic.GPSPage"
             Title="GPSPage">
  <ScrollView>
    <StackLayout Padding="10">
      <Label Text="Detect GPS" FontSize="20"/>
            <Button Text="Get Location" Clicked="detectGPS" BackgroundColor="Silver" HeightRequest="40"/>

            <Label x:Name="TimeStamp" HorizontalOptions="FillAndExpand" Text="Time: "/>
            <Label x:Name="Latitude" HorizontalOptions="FillAndExpand" Text="Latitude: "/>
            <Label x:Name="Longitude" HorizontalOptions="FillAndExpand" Text="Longitude: "/>
            <Label x:Name="Address" HorizontalOptions="FillAndExpand" Font="16" Text="Address: " />

            <!--<Label Text="ContentPage is the simplest type of page."/>
      <Label Text="The content of the ContentPage is generally a layout of some sort that can be a parent to multiple children."/>
      <Label Text="This contant page contains a StackLayout, which in turn contains a few Label views (including the large one on the top and an example of handling click commands and data binding to a Label below)."/>
      <Button Text="Click Me" Command="{Binding IncreaseCountCommand}"/>
      <Label Text="{Binding CountDisplay}"/>-->
    </StackLayout>
  </ScrollView>
</ContentPage>